---

const { project } = Astro.props

const TAGS = project.tags

import GithubIcon from '@/icons/GithubIcon.astro'
import ExternalLink from '@/icons/ExternalLink.astro'

---

<div class="bg-ancg-950 p-5 rounded-xl ">
  <img
    src={project.imageHref}
    class="w-72 lg:w-96 h-auto m-auto rounded-md aspect-auto "
    alt={`Imagen de mi proyecto ${project.name}`}
  />
  <div class="grid grid-cols-3 items-end justify-items-center content-stretch">
    
    {
      TAGS &&
        TAGS.map((tag: string) => {
          const imageName = tag.split('/').pop()!.replace('.svg', '').replace('.webp', '');

          return (
            <div class="inline-flex h-6 max-w-max cursor-default items-center justify-evenly flex-col content-center gap-1 rounded-[64px] px-2 py-1 text-center text-xs font-semibold leading-relaxed bg-blue-900/20 border-solid border-blue-500  text-white [&amp;>div>img]:stroke-white flex-wrap mt-2">
              <div class="inline-flex size-[18px] items-center justify-start overflow-hidden">  
                <img src={tag} class="w-7 h-auto pl-1 aspect-square" alt={`mi ${imageName}`}>
              </div>
              <span class="ml-1">{imageName}</span>
            </div>
          )
        }
      )
    }
  </div>
  
  <div class="pl-2">
    <h2 class="text-2xl font-bold my-4 mx-auto">{project.title}</h2>
    <p>{project.body}</p>
  </div>

  <div class="pl-2 flex lg:flex-row flex-col gap-x-3">
    <button class=" bg-sky-700 hover:bg-sky-600 p-2 mt-5 justify-evenly rounded-md">
      <a class="flex flex-row justify-center items-center" target="_blank" rel="noopener" href={project.github}><GithubIcon class="mr-2 size-6" />Ver Repositorio</a>
    </button>
    <button class=" bg-sky-700 hover:bg-sky-600 p-2 mt-5 justify-evenly rounded-md">
      <a class="flex flex-row justify-center items-center" target="_blank" rel="noopener" href={project.href}><ExternalLink class="mr-2 size-6" />Proyecto en vivo</a>
    </button>
  </div>
</div>
