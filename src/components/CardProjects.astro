---
interface Props {
  project: Proyectos;
  lang: 'en' | 'es';
}

const text = {
  en: {
    button_content_github: 'View Repository',
    button_content_live: 'Live Project',
  },
  es: {
    button_content_github: 'Ver Repositorio',
    button_content_live: 'Proyecto en Vivo',
  },
