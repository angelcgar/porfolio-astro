---
// import ArrowRight from "../icons/ArrowRight.astro";
interface Props {
  title: string;
  description: string;
  link?: string;
  date: string;
}

const { title, description, link, date } = Astro.props;
---

<div
  class="absolute w-3 h-3 rounded-full mt-1.5 -start-1.5 border border-gray-900 bg-purple-900"
>
</div>
<time
  class="mb-1 text-sm font-normal leading-none text-sky-400 dark:text-sky-400/80"
  >{date}</time
>
<h3 class="text-lg font-semibold text-yellow-400 dark:text-yellow-400 mt-2">
  {title}
</h3>
<p class="mb-4 text-base md:text-xl font-normal dark:text-zinc-300 text-pretty">
  {description}
</p>
{
  link && (
    <a
      href={link}
      class="bg-white/5
    border dark:border-white/10 border-gray-300
    rounded-full
    inline-flex justify-center items-center gap-x-2
    py-1 px-2 md:py-2 md:px-4
    text-xs md:text-base
    transition
    hover:scale-110 hover:bg-white/10"
    >
      Saber m√°s...
    </a>
  )
}
