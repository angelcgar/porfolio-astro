---
import Layout from '../../layouts/Layout.astro'

// Components
import CardProjects from '../CardProjects.astro'

// Config mas-projects.json
import projects from '../../config/mas-projects.json'
import Stack from '../Stack.astro'
---

<Layout title="Seccion contacto" descrition="mi descripcion">
  <div class="max-w-5xl m-auto mt-16 pb-20 px-1 md:px-4 lg:w-[900px] p-1 md:p-4 leading-normal">
    <h1 class="text-5xl text-center font-bold pb-4">Mas proyectos</h1>
    
    <div class="grid md:grid-cols-2 gap-4 p-4">
      {
        projects.map((project) => (
          <CardProjects project={project} />
        ))
      }
    </div>
  </div>
  
  <Stack client:load />
</Layout>