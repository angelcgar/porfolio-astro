---
import SetStack from './SetStack.jsx'

// json
import { frontend, backend, tools, study } from '@/config/stack.json'
---

<h2 class="text-3xl font-bold text-dark-700 dark:text-primary-50">hola</h2>
<p>Lorem ipsum dolor sit amet consectetur adipisicing elit. Ab, perspiciatis. Ab, quo.</p>

<section class="grid lg:grid-cols-2 lg:grid-rows-2 gap-6 lg:place-content-center">
  
  <SetStack client:visible>
    <h2 class="text-2xl md:text-3xl font-bold pb-3">Habilidades Front-End</h2>
    <ul class="grid grid-cols-2 md:grid-cols-3 gap-2">
      {
        frontend.map((skill) => (
          <li>
            <img src={skill.img} class="w-10 m-auto h-10" alt={`un svg de ${skill.name}`} />
            <p class="mt-4 uppercase font-semibold text-green-100">{skill.name}</p>
          </li>
        ))
      } 
    </ul>
  </SetStack>

  <SetStack client:visible>
    <h2 class="text-2xl md:text-3xl font-bold pb-3">Habilidades Back-End</h2>
    <ul class="grid grid-cols-2 md:grid-cols-3 gap-2">
      {
        backend.map((skill) => (
          <li>
            <img src={skill.img} class="w-10 m-auto h-10" alt={`un svg de ${skill.name}`} />
            <p class="mt-4 uppercase font-semibold text-green-100">{skill.name}</p>
          </li>
        ))
      }
    </ul>
  </SetStack>

  <SetStack client:visible>
    <h2 class="text-2xl md:text-3xl font-bold pb-3">Mas habilidades</h2>
    <ul class="grid grid-cols-2 md:grid-cols-3 gap-2">
      {
        tools.map((skill) => (
          <li>
            <img src={skill.img} class="w-10 m-auto h-10" alt={`un svg de ${skill.name}`} />
            <p class="mt-4 uppercase font-semibold text-green-100">{skill.name}</p>
          </li>
        ))
      }
    </ul>
  </SetStack>

  <SetStack client:visible>
    <h2 class="text-2xl md:text-3xl font-bold pb-3">Estudiando</h2>
    <ul class="grid grid-cols-2 md:grid-cols-3 gap-2">
      {
        study.map((skill) => (
          <li>
            <img src={skill.img} class="w-10 m-auto h-10" alt={`un svg de ${skill.name}`} />
            <p class="mt-4 uppercase font-semibold text-green-100">{skill.name}</p>
          </li>
        ))
      }
    </ul>
  </SetStack>
</section>