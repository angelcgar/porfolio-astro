---
import SetStack from './SetStack.jsx'
import CardSkills from './CardSkills.astro'

const My_STACk = [
  {
    name: "html",
    img: "/svg/HTML.svg"
  },
  {
    name: "css",
    img: "/svg/CSS.svg"
  },
  {
    name: "javascript",
    img: "/svg/JavaScript.svg"
  },
  {
    name: "react",
    img: "/svg/React.svg"
  },
  {
    name: "vite.js",
    img: "/svg/ViteJs.svg"
  },
  {
    name: "tailwind",
    img: "/svg/tailwind.svg"
  },
  {
    name: "next.js",
    img: "/svg/NextJs.svg"
  },
  {
    name: "astro",
    img: "/svg/Astro.svg"
  }
]
---

<SetStack client:visible>
    <h2 class="text-2xl md:text-3xl font-bold pb-3">Habilidades Front-End</h2>
    
    <ul class="grid grid-cols-2 md:grid-cols-3 gap-2">
    
      {
        My_STACk.map((stack) => (
          <li>
            <CardSkills>
              <img src={stack.img} class="w-10 m-auto h-10" alt={`un svg de ${stack.name}`} />
              <p class="mt-4 uppercase font-semibold text-green-100">{stack.name}</p>
            </CardSkills>
          </li>
        ))
      }
    </ul> 
</SetStack>

<style>
  
  img {
    aspect-ratio: 1 / 1;
  }
</style>