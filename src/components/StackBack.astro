---
import SetStack from './SetStack.jsx'
import CardSkills from './CardSkills.astro'

const My_STACk = [
  {
    name: "node.js",
    img: "/svg/nodejs.svg"
  },
  {
    name: "express js",
    img: "/svg/expressjs.svg"
  },
  {
    name: "bun",
    img: "/svg/Bun.svg"
  }
]
---

<SetStack client:visible>
    <h2 class="text-2xl md:text-3xl font-bold pb-3">Habilidades Back-End</h2>
    
    <ul class="grid grid-cols-2 md:grid-cols-3 gap-2">
    
      {
        My_STACk.map((stack) => (
          <li>
            <CardSkills>
              <img src={stack.img} class="w-10 m-auto h-10" alt="un svg" />
              <p class="mt-4 uppercase font-semibold text-green-100">{stack.name}</p>
              </CardSkills>
          </li>
        ))
      }
    </ul> 
</SetStack>

<style>
  
  img {
    aspect-ratio: 1 / 1;
  }
</style>