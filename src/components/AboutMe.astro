const { lang } = Astro.props;
---

<header
  class="container flex flex-col gap-3 p-5 mx-1 mt-10 rounded-md md:flex-row text-pretty md:text-left md:p-10 mb-11"
>
  <div class="flex-1">
    <h1 class="pb-3 text-2xl font-bold md:text-3xl">{text[lang].title}</h1>

    <div
      class="text-base md:text-lg max-w-[700px] pb-3 dark:[&>p>strong]:text-yellow-300 [&>p]:mb-4"
    >
      <p>
        {text[lang].description}
        <strong>{text[lang].description_skill_javascript} </strong>

        {text[lang].description_helper_and}
        <strong>{text[lang].description_skill_python}</strong>
      </p>
      <p>
        {text[lang].description2}
      </p>
      <p>
        {text[lang].description3}
        <strong> {text[lang].description_skill_html} </strong>, <strong>
          {text[lang].description_skill_css}
        </strong>
        {text[lang].description_helper_and}
        <strong> {text[lang].description_skill_javascript}</strong>,
        {text[lang].description4}
        <strong> {text[lang].description_skill_react} </strong>
        {text[lang].description_helper_and}
        <strong> {text[lang].description_skill_angular}.</strong>
        {text[lang].description5}
      </p>
    </div>
  </div>

  <!--! bug; la imagen no encaja con el proyecto -->
  <img
    alt="un dibujo de angelcgar, el dibujo fue echo con IA"
    src="/img/avatar3.webp"
    class="object-cover h-48 mx-auto mt-1 w-58 rounded-xl md:mt-20 lg:hdden aspect-auto"
  />
</header>
