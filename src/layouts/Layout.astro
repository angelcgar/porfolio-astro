---
import { ViewTransitions } from 'astro:transitions';

import SEO from '@/components/SEO.astro';
import Footer from '@/components/Footer.astro';

import '@/styles/css-reset-2024.css';

interface Props {
  title: string;
  descrition: string;
}

const { title, descrition } = Astro.props;
---

<!doctype html>
<html lang="es">
  <head>
    <SEO {title} {descrition} />
    <ViewTransitions />
  </head>

  <body class="bg-slate-100 dark:bg-slate-900 dark:text-white">
    <main class="mx-auto md:pt-7 container">
      <slot />
    </main>
    <Footer />
    <style is:global>
      :root {
        color-scheme: dark light;
      }

      html {
        font-family: system-ui, sans-serif;
      }
    </style>
  </body>
</html>
