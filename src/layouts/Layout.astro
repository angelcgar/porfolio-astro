---
import '../styles/global.css'
import '../styles/css-reset-2024.css'
import Footer from '../components/Footer.astro'

import {ViewTransitions} from 'astro:transitions'

interface Props {
  title: string;
  descrition: string;
}

const { title, descrition } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={descrition} />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/img/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <ViewTransitions />
  </head>


<!-- 
  <body
    class='grid justify-center min-h-screen min-w-[100dvw] px-8 overflow-x-hidden bg-neutral-950 bg-[radial-gradient(ellipse_100%_100%_at_50%_-80%,rgba(150,150,250,0.7),rgba(255,255,255,0))]'> -->
  <body class="bg-ancg-950">
    <main class="mx-auto md:pt-10 container">
      <slot />
    </main>
    <Footer />
  </body>

  <style is:global>
    :root {
      color-scheme: dark light;
    }

    html {
      font-family: system-ui, sans-serif;
      background: #13151a;
    }
  </style>
</html>
